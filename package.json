{
    "name": "neat-todo",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "workspaces": [
        "frontend",
        "server"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:server\"",
        "dev:frontend": "cd frontend && next dev",
        "dev:server": "cd server && concurrently \"tsc -w\" \"nodemon --no-warnings build\"",
        "build": "concurrently \"npm run build:frontend\" \"npm run build:server\"",
        "build:frontend": "cd frontend && next build",
        "build:server": "cd server && tsc && node build",
        "lint:frontend": "cd frontend && next lint",
        "tsc:server": "cd server && tsc"
    },
    "author": "LoicE5",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "autoprefixer": "^10.0.1",
        "concurrently": "^8.2.2",
        "eslint": "^8",
        "eslint-config-next": "14.0.2",
        "postcss": "^8",
        "tailwindcss": "^3.3.0",
        "typescript": "^5.2.2"
    },
    "type": "commonjs",
    "dependencies": {
        "@preact/signals-react": "^1.3.7",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/passport-jwt": "^3.0.13",
        "@types/pg": "^8.11.0",
        "@types/sequelize": "^4.28.18",
        "@vercel/analytics": "^1.2.2",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "framer-motion": "^10.16.12",
        "jsonwebtoken": "^9.0.2",
        "next": "^14.2.3",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.11.3",
        "react": "^18",
        "react-dom": "^18",
        "react-player": "^2.13.0",
        "sequelize": "^6.35.0",
        "validator": "^13.11.0"
    }
}
