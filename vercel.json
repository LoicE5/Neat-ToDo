{
    "version": 2,
    "builds": [
        {
            "src": "/api/index.js",
            "use": "@vercel/node",
            "config": { "includeFiles": ["server/build/**"] }
        },
        {
            "src": "frontend/next.config.js",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
          "src": "/api/(.*)",
          "dest": "/api/index.js"
        },
        {
          "src": "/(.*)",
          "dest": "/frontend/$1"
        }
    ]
}