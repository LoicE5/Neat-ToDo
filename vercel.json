{
    "version": 2,
    "builds": [
        {
            "src": "frontend/next.config.js",
            "use": "@vercel/next"
        },
        {
            "src": "server/build/index.js",
            "use": "@vercel/node",
            "config": { "includeFiles": ["server/build/**"] }
        }
    ],
    "rewrites": [
        {
          "source": "/api/(.*)",
          "dest": "/api"
        },
        {
          "destination": "/(.*)",
          "dest": "/frontend/$1"
        }
    ]
}

